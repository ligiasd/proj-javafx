<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="332.0" prefWidth="400.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx2.HelloController">

    <Label layoutX="27.0" layoutY="27.0" text="Calculate sum" />
    <TextField fx:id="txtNumber1" layoutX="27.0" layoutY="69.0" prefWidth="40.0" promptText="First number">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></TextField>
    <TextField fx:id="txtNumber2" layoutX="27.0" layoutY="112.0" prefWidth="40.0" promptText="Second number">
      <VBox.margin>
         <Insets left="20.0" right="20.0" />
      </VBox.margin></TextField>
    <Button fx:id="btSum" layoutX="27.0" layoutY="165.0" mnemonicParsing="false" onAction="#onBtSumClick" text="Sum" />
    <Label layoutX="27.0" layoutY="212.0" text="Result =" />
    <Label fx:id="labelResult" layoutX="81.0" layoutY="212.0" prefWidth="40.0" />

</VBox>
